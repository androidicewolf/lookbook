<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_edging_style"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bill_rechargeaskfor_online_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomandtop_edging_style"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingEnd="16dp"
        android:paddingStart="15dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ali_pay" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="支付宝充值"
            android:textColor="#494949"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/bill_rechargeaskfor_online_alipay_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/unclickbutton" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bill_rechargeaskfor_online_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_edging_style"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingEnd="16dp"
        android:paddingStart="15dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat_pay" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="微信充值"
            android:textColor="#494949"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/bill_rechargeaskfor_online_wechat_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/unclickbutton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_edging_style"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"
            android:textColor="#494949"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/bill_rechargeaskfor_online_et_inputmoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:hint="输入充值的金额"
            android:textColor="#494949"
            android:textColorHint="#C1C1C1"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bill_rechargeaskfor_online_btn_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_btn_style"
        android:clickable="false"
        android:text="功能正在完善中..."
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>