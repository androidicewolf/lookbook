<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomandtop_edging_style"
    android:orientation="horizontal"
    android:paddingBottom="18dp"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    android:paddingTop="18dp">

    <ImageView
        android:id="@+id/order_fragment_item_iv"
        android:layout_width="150dp"
        android:layout_height="100dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/order_fragment_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
            android:textColor="@color/dalvtextblack"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/order_fragment_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/order_fragment_item_title"
            android:layout_below="@id/order_fragment_item_title"
            android:layout_marginTop="10dp"
            android:text="团期： 2017-09-23"
            android:textColor="@color/dalvtextthinblack"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/order_fragment_item_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/dalvred"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/order_fragment_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="3399.0"
                android:textColor="@color/dalvred"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/order_fragment_item_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已付预付款"
                android:textColor="@color/dalvred"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/order_fragment_item_ll"
            android:layout_marginBottom="5dp"
            android:text="应付金额"
            android:textColor="@color/dalvtextblack"
            android:textSize="9sp" />
    </RelativeLayout>
</LinearLayout>