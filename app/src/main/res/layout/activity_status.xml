<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dalvu.www.dalvyou.activity.StatusActivity">
    <Button
        android:id="@+id/status_btn_tourist"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/status_btn_agency"
        android:text="我是游客"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/status_btn_agency"
        android:layout_centerInParent="true"
        android:text="我是顾问"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/status_btn_provider"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/status_btn_agency"
        android:text="我是供应商"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
