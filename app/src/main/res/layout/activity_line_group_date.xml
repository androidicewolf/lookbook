<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.dalvu.www.dalvyou.activity.line.LineGroupDateActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/line_groupdate_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_edging_style"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            style="@style/GroupDateWeekStyle"
            android:text="日" />

        <TextView
            style="@style/GroupDateWeekStyle"
            android:text="一" />

        <TextView
            style="@style/GroupDateWeekStyle"
            android:text="二" />

        <TextView
            style="@style/GroupDateWeekStyle"
            android:text="三" />

        <TextView
            style="@style/GroupDateWeekStyle"
            android:text="四" />

        <TextView
            style="@style/GroupDateWeekStyle"
            android:text="五" />

        <TextView
            style="@style/GroupDateWeekStyle"
            android:text="六" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/line_groupdate_framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
