<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/linedetail_changeprice_pic"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="#FFF"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="9dp" />

    <TextView
        android:id="@+id/linedetail_changeprice_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:ellipsize="end"
        android:lines="2"
        android:paddingBottom="10dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:text="标题"
        android:textColor="@color/dalvtitleblack"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomandtop_edging_style"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/linedetail_changeprice_module"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="出境游"
            android:textColor="@color/dalvbule"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/dalvred"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/linedetail_changeprice_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1699.0"
            android:textColor="@color/dalvred"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>
