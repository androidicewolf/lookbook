<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dalvu.www.dalvyou.activity.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary">
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/main_bottombar"
        android:layout_width="match_parent"
        app:bnbBackgroundColor="#FFF"
        app:bnbInactiveColor="@android:color/darker_gray"
        app:bnbMode="mode_shifting"
        app:bnbBackgroundStyle="background_style_static"
        android:layout_height="56dp">
    </com.ashokvarma.bottomnavigation.BottomNavigationBar>
</LinearLayout>