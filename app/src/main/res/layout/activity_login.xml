<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.dalvu.www.dalvyou.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/arrowhead_up" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/login_tv_enroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="注册账号"
                android:textColor="@color/dalvbule"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:src="@mipmap/login_logo" />

    <TextView
        android:id="@+id/login_tv_dalv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="大旅账号登录"
        android:textColor="#444"
        android:textSize="22sp" />
    <EditText
        android:id="@+id/login_et_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/login_tv_dalv"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_edittext_style"
        android:hint="国内手机号码"
        android:inputType="phone"
        android:textColor="#B4B4B4"
        android:textSize="15sp" />
    <EditText
        android:id="@+id/login_et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/login_et_name"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/login_edittext_style"
        android:hint="登录密码"
        android:inputType="textPassword"
        android:textColor="#B4B4B4"
        android:textSize="15sp" />
    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/login_et_password"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/login_btn_style"
        android:text="登录"
        android:textColor="#FFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/login_tv_forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn_login"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="忘记密码？"
        android:textColor="#444"
        android:textSize="13sp" />
</RelativeLayout>
