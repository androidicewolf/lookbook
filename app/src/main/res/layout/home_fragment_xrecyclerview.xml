<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/home_fragment_xrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/home_fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/home_fragment_toolbar_style">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@mipmap/geographical_position" />

            <LinearLayout
                android:id="@+id/home_fragment_search_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="45dp"
                android:background="@drawable/home_fragment_search_style"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="6dp">

                <TextView
                    android:id="@+id/home_fragment_search_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="搜索旅游线路、签证、代码"
                    android:textColor="#FFF"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/home_fragment_search_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/search" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>