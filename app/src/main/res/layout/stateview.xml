<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/state_rl"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/state_load"
            android:visibility="gone"
            android:src="@mipmap/netload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/state_error"
            android:visibility="gone"
            android:src="@mipmap/neterror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/state_empty"
            android:visibility="gone"
            android:src="@mipmap/dataemtry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/state_text"
        android:layout_below="@id/state_rl"
        android:layout_centerHorizontal="true"
        android:text="小游迷路了"
        android:textColor="#3393A1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>