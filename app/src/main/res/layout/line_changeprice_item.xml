<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:background="#FFF"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_edging_style"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/group_date" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="团期" />

        <TextView
            android:id="@+id/line_changeprice_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-08-02" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_edging_style"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="20dp"
            android:paddingStart="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="同行价/建议零售价"
                android:textColor="#333"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成人价："
                    android:textColor="#9F9F9F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/line_changeprice_item_manprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="￥1288/￥1588"
                    android:textColor="@color/dalvred"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="儿童价："
                    android:textColor="#9F9F9F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/line_changeprice_item_childrenprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="￥1288/￥1588"
                    android:textColor="@color/dalvred"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单房差："
                    android:textColor="#9F9F9F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/line_changeprice_item_difference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="￥1288/￥1588"
                    android:textColor="@color/dalvred"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/linedetail_changename_btn_style"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingStart="0.5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_edging_style"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="自定义价"
                android:textColor="#333"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/line_changeprice_item_inputmanprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_edging_style"
                android:hint="请输入你要修改的价格"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp"
                android:paddingTop="12dp"
                android:textColor="@color/dalvtextblack"
                android:textColorHint="#D5D5D5"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/line_changeprice_item_inputchildrenprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_edging_style"
                android:hint="请输入你要修改的价格"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp"
                android:paddingTop="12dp"
                android:textColor="@color/dalvtextblack"
                android:textColorHint="#D5D5D5"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/line_changeprice_item_inputdifferenceprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_edging_style"
                android:hint="请输入你要修改的价格"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp"
                android:paddingTop="12dp"
                android:textColor="@color/dalvtextblack"
                android:textColorHint="#D5D5D5"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/line_changeprice_item_saveprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_btn_style"
        android:paddingBottom="8dp"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:paddingTop="8dp"
        android:text="保存"
        android:textColor="#FFF"
        android:textSize="13sp" />
</LinearLayout>