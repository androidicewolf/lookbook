<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_edging_style"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/visitorlist_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/visitorlist_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="名字"
            android:textColor="#4A4A4A"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/visitorlist_item_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:text="1383838438"
            android:textColor="#4A4A4A"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/visitorlist_item_binddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定时间： 2017-01-12"
            android:textColor="@color/dalvtextthinblack"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>