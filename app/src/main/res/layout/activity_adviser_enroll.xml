<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.dalvu.www.dalvyou.activity.AdviserEnrollActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:id="@+id/login_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrowhead_up" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="旅游顾问注册"
                android:textColor="#000"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/enroll_ed_name"
        style="@style/EnrollEditTextStyle"
        android:layout_marginTop="32dp"
        android:hint="输入姓名" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/enroll_selectorcity_tv_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/login_edittext_style"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enroll_tv_selectorcity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="选择城市"
                android:textColor="#B4B4B4"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrowhead_left" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/enroll_selectorcity_et_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/login_edittext_style"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/enroll_selectorcity_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF"
                android:hint="请输入城市"
                android:textColor="@color/dalvtextblack"
                android:textColorHint="#B4B4B4"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/enroll_ed_inputtel"
            style="@style/EnrollEditTextStyle"
            android:hint="输入手机号"
            android:inputType="phone" />

        <TextView
            android:id="@+id/enroll_btn_getprovingnumber"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/enroll_btn_style"
            android:gravity="center"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="获取验证码"
            android:textSize="12sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/enroll_ed_inputprovingnumber"
        style="@style/EnrollEditTextStyle"
        android:hint="输入验证码"
        android:inputType="number" />

    <EditText
        android:id="@+id/enroll_ed_inputpassword"
        style="@style/EnrollEditTextStyle"
        android:hint="输入密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/enroll_ed_confirmpassword"
        style="@style/EnrollEditTextStyle"
        android:hint="确认密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/enroll_ed_occupation"
        style="@style/EnrollEditTextStyle"
        android:hint="职务：导游、职员等" />

    <Button
        android:id="@+id/enroll_btn_enroll"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/login_btn_style"
        android:text="立即注册"
        android:textColor="#FFF"
        android:textSize="15sp" />
</LinearLayout>
