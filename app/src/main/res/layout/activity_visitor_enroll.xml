<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.dalvu.www.dalvyou.activity.VisitorEnrollActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/login_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrowhead_up_h" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="普通注册"
                android:textColor="#000"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/enroll_ed_name"
        style="@style/EnrollEditTextStyle"
        android:layout_marginTop="32dp"
        android:hint="输入姓名" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/enroll_ed_inputtel"
            style="@style/EnrollEditTextStyle"
            android:hint="输入手机号"
            android:inputType="phone" />

        <TextView
            android:id="@+id/enroll_tv_getprovingnumber"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/enroll_btn_style"
            android:gravity="center"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="获取验证码"
            android:textSize="12sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/enroll_ed_inputprovingnumber"
        style="@style/EnrollEditTextStyle"
        android:hint="输入验证码"
        android:inputType="number" />

    <EditText
        android:id="@+id/enroll_ed_inputpassword"
        style="@style/EnrollEditTextStyle"
        android:hint="输入密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/enroll_ed_confirmpassword"
        style="@style/EnrollEditTextStyle"
        android:hint="确认密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/enroll_ed_occupation"
        style="@style/EnrollEditTextStyle"
        android:hint="请填写服务顾问手机" />

    <Button
        android:id="@+id/enroll_btn_enroll"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/login_btn_style"
        android:text="立即注册"
        android:textColor="#FFF"
        android:textSize="15sp" />
</LinearLayout>
