<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F1F1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_edging_style"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingEnd="13dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="国内合同"
                android:textColor="#494949"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bill_contractaskfor_internal_univalent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:text="每份0元"
                android:textColor="@color/dalvred"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_edging_style"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bill_contractaskfor_internal_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@mipmap/reduce" />

                <TextView
                    android:id="@+id/bill_contractaskfor_internal_number"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/all_nocorner_edging_style"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="0"
                    android:textColor="#454545"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/bill_contractaskfor_internal_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@mipmap/add" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_edging_style"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingEnd="13dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="境外合同"
                android:textColor="#494949"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bill_contractaskfor_overseas_univalent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:text="每份0元"
                android:textColor="@color/dalvred"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_edging_style"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bill_contractaskfor_overseas_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@mipmap/reduce" />

                <TextView
                    android:id="@+id/bill_contractaskfor_overseas_number"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/all_nocorner_edging_style"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="0"
                    android:textColor="#454545"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/bill_contractaskfor_overseas_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@mipmap/add" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_edging_style"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingEnd="13dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="单项委托"
                android:textColor="#494949"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bill_contractaskfor_entrust_univalent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:text="每份0元"
                android:textColor="@color/dalvred"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_edging_style"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bill_contractaskfor_entrust_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@mipmap/reduce" />

                <TextView
                    android:id="@+id/bill_contractaskfor_entrust_number"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/all_nocorner_edging_style"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="0"
                    android:textColor="#454545"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/bill_contractaskfor_entrust_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@mipmap/add" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="索取方式"
            android:textColor="#494949"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottomandtop_edging_style"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bill_contractaskfor_express"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="12dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="快递"
                    android:textColor="#494949"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/bill_contractaskfor_express_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/click_button" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#EEEEEE" />

            <LinearLayout
                android:id="@+id/bill_contractaskfor_bymyself"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="12dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="自取"
                    android:textColor="#494949"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/bill_contractaskfor_bymyself_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/unclickbutton" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bill_contractaskfor_dalvinfo_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/bill_contractaskfor_dalvcompanyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:text="公司地址： 北京市朝阳区朝外神路街39号3-81"
                android:textColor="#494949"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/bill_contractaskfor_dalvtel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话： 010-85626326"
                android:textColor="#494949"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bill_contractaskfor_express_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="快递选择"
                android:textColor="#494949"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomandtop_edging_style"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/bill_contractaskfor_gettedpay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="到付"
                        android:textColor="#494949"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/bill_contractaskfor_gettedpay_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/click_button" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#EEEEEE" />

                <LinearLayout
                    android:id="@+id/bill_contractaskfor_nowpay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="12dp"
                    android:paddingStart="15dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="邮寄"
                            android:textColor="#494949"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(支付10元快递费)"
                            android:textColor="@color/dalvred"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/bill_contractaskfor_nowpay_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/unclickbutton" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_edging_style"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮寄地址："
                    android:textColor="#494949"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/bill_contractaskfor_inputaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#FFF"
                    android:gravity="top"
                    android:hint="请输入您的收件地址"
                    android:lines="2"
                    android:textColorHint="#C1C1C1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_edging_style"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人姓名："
                    android:textColor="#494949"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/bill_contractaskfor_inputname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#FFF"
                    android:hint="请输入收件人姓名"
                    android:maxLength="8"
                    android:textColorHint="#C1C1C1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_edging_style"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人手机："
                    android:textColor="#494949"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/bill_contractaskfor_inputtel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#FFF"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:textColorHint="#C1C1C1"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bill_contractaskfor_conmmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_btn_style"
            android:text="提交申请"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>